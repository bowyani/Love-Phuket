        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCc1JjOS1TsFXCpiafRcsd9w5HcLT7qgGo&callback=myMap"></script>



        <div class="content">

            <!--Left lorem-->
            <div class="header">
                <h3><i class="fa-solid fa-location-dot"></i>Thailand</h3>
                <h1>PHU</h1>
                <h1>KET</h1>
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. At, ea, deleniti perferendis architecto
                    sint,
